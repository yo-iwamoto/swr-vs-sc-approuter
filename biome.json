{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "files": {
    "ignore": ["node_modules", ".next", "coverage"]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["src/app/layout.tsx"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space"
  }
}
